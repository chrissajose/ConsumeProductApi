@model List<ProductList>
@{
    ViewData["Title"] = "Fetching from webapi";
}

<div class="text-center">
    <h5 class="fs-4 mb-4">List of Products from WebAPI</h5>
    <a class="btn btn-primary float-right" style="float:right!important" asp-controller="Home" asp-action="AddNewProduct"><i class="bi bi-plus-circle"></i> &nbsp;Add new product</a>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Product Id</th>
                <th>Product Name</th>
                <th>Product Price</th>
                <th></th>
                
            </tr>
        </thead>
        @if(Model != null)
        {
            foreach(var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>
                        <a asp-controller="Home" asp-action="UpdateProduct" asp-route-id="@product.Id"><i class="bi bi-pencil-square text-secondary"></i></a>&nbsp; 
                        <a onclick=DeleteProduct(@product.Id)><i class="bi bi-trash3-fill text-secondary"></i></a>
                    </td>
                    
                </tr>
            }

        }
        <tbody>

        </tbody>
    </table>
</div>
